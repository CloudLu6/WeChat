@model Deepleo.Web.Models.DLRecommendationAutoAnswer

@{
    ViewBag.Title = "编辑消息";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AutoAnswerId)
        @Html.HiddenFor(model => model.Describe)
        <div class="form-group">
            <div class="col-md-10">
               <br/>
               <p style="font-size:1.5em"> @Html.DisplayFor(model => model.Describe)</p>
               <hr /> 
                @Html.TextAreaFor(model => model.AutoAuswerText, new { htmlAttributes = new { @class = "form-control", @id = "AutoAuswerText" } })
                @Html.ValidationMessageFor(model => model.AutoAuswerText, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存内容" class="btn btn-info" />
                <a class="btn btn-info" href='@Url.Action("Index", "DLRecommendationAutoAnswers")'>
                    返回列表
                </a>
            </div>
        </div>
    </div>
}
 
<style type="text/css">
    #AutoAuswerText {
        width: 100%;
        height: 50%;
    }
    
</style>

 